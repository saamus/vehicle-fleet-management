{
  "compilerOptions": {
    "target": "ES6",                     
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,        
    "strict": true,
    "esModuleInterop": true,            
    "resolveJsonModule": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src", "Tests/**/*.ts"]
}
